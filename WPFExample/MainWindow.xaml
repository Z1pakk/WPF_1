        <TextBlock Canvas.Left="200" Canvas.Top="200">
            Пароль:
        </TextBlock>
        <TextBox Canvas.Left="200" Canvas.Top="230" Width="100" />

        <Button Click="Login_Click" Content="Login" Canvas.Top="250" Canvas.Left="200" Width="100" />
    </Canvas>
</Window>
